@model List<Smart_ELearning.ViewModels.Test.SubmitDetailVm>;

@{
    ViewData["Title"] = "Smart-Elearning";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ var index = 1;}
<div>
    <h4>Grade: @ViewBag.TotalGrade/100 </h4>

    <hr />

    <div class="container">
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col-sm-2">
                    <strong>Question @(index++)</strong>
                </div>
                <div class="col-sm-10">
                    <span style="white-space: pre-line">@item.QuestionContent</span>
                </div>

                <div class="col-sm-2">
                    <strong>Choice A</strong>
                </div>
                <div class="col-sm-10">
                    <span style="white-space: pre-line">@item.ChoiceA</span>
                </div>

                <div class="col-sm-2">
                    <strong>Choice B</strong>
                </div>
                <div class="col-sm-10">
                    <span style="white-space: pre-line">@item.ChoiceB</span>
                </div>
                <div class="col-sm-2">
                    <strong>Choice C</strong>
                </div>
                <div class="col-sm-10">
                    <span style="white-space: pre-line">@item.ChoiceC</span>
                </div>
                <div class="col-sm-2">
                    <strong>Choice D</strong>
                </div>
                <div class="col-sm-10">
                    <span style="white-space: pre-line">@item.ChoiceD</span>
                </div>
                <div class="col-sm-2">
                    <strong>Correct Answer</strong>
                </div>
                <div class="col-sm-10">
                    <span style="white-space: pre-line">@item.CorrectAnswer</span>
                </div>
                <div class="col-sm-2">
                    <strong>Student Answer</strong>
                </div>
                <div class="col-sm-10">
                    <span style="white-space: pre-line">@item.StudentAnswer</span>
                </div>
            </div>
            <hr style="font-size:5px;" />
        }
    </div>
</div>