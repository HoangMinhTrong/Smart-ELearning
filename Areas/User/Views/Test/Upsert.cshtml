@model Smart_ELearning.ViewModels.TestViewModel;
@{
    ViewData["Title"] = "Upsert";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Create Test";
}

<form method="post">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="TestModel.ScheduleId"></label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.TestModel.ScheduleId, Model.ScheduleListItems, "-Select a Schedule", new { @class = "form-control" })
                    <span asp-validation-for="TestModel.ScheduleId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="TestModel.Title"></label>
                </div>
                <div class="col-8">
                    <input asp-for="TestModel.Title" class="form-control" />
                    <span asp-validation-for="TestModel.Title" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="TestModel.NumberOfQuestion"></label>
                </div>
                <div class="col-8">
                    <input asp-for="TestModel.NumberOfQuestion" class="form-control" />
                    <span asp-validation-for="TestModel.NumberOfQuestion" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="TestModel.Status"></label>
                </div>
                <div class="col-8">
                    <input asp-for="TestModel.Status" class="form-control" />
                    <span asp-validation-for="TestModel.Status" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="TestModel.CorrectAnswerlist"></label>
                </div>
                <div class="col-8">
                    <input asp-for="TestModel.CorrectAnswerlist" class="form-control" />
                    <span asp-validation-for="TestModel.CorrectAnswerlist" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">

                    @if (Model.TestModel.Id != 0)
                    {
                        <partial name="_EditAndBackToListButton" model="Model.TestModel.Id" />
                    }
                    else
                    {
                        <partial name="_CreateAndBackToListButton" />
                    }
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}