@model Smart_ELearning.ViewModels.Test.StudentTestVm;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-controller="Test" asp-action="SubmitRecord">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-12 border-bottom">
            <h2 class="text-primary">Titl Chuwa ghi </h2>
        </div>
        <div class="col-8 pt-4">

            @for (int i = 0; i < Model.NumberOfQuestion; i++)
            {
                <input type="hidden" asp-for="@Model.QuestionsResult[i].CorrectAnswer" />
                <input type="hidden" asp-for="@Model.QuestionsResult[i].Id" />
                <input type="hidden" asp-for="@Model.QuestionsResult[i].TestId" />
                <h4><strong>Question </strong>@(i + 1)</h4>
                <p>@Model.QuestionsResult[i].Content</p>
                <label asp-for="@Model.QuestionsResult[i].StudentAnswer">Choose a answer:</label>
                <select asp-for="@Model.QuestionsResult[i].StudentAnswer" id="answer">
                    <option value="A">@Model.QuestionsResult[i].ChoiceA</option>
                    <option value="B">@Model.QuestionsResult[i].ChoiceB</option>
                    <option value="C">@Model.QuestionsResult[i].ChoiceC</option>
                    <option value="D">@Model.QuestionsResult[i].ChoiceD</option>
                </select>

                <hr />
            }
            <div class="form-group row">
                <div class="col-8 offset-4">
                    <div class="row">
                        <div class="col">
                            <a type="submit" class="btn btn-primary form-control" href="@Url.Action("SubmitRecord","Test",new {recordid = ViewBag.RecordId} )"> Submit</a>
                        </div>
                        <div class="col">
                            <input type="submit" a asp-action="Index" class="btn btn-success form-control" name="Submit" value="Cancel" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>