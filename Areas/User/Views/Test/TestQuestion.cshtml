@model Smart_ELearning.ViewModels.TestQuestionVm

@{
    ViewData["Title"] = "TestQuestion";
}
@{ int index = 1;}
<h1>TestQuestion</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            <h4>@Html.DisplayNameFor(model => model.Title)</h4>
        </dt>
        <dd class="col-sm-10">
            <h4>@Html.DisplayFor(model => model.Title)</h4>
        </dd>
    </dl>
    <hr />
    <dl class="row">




        @foreach (var item in Model.question)
        {
            <form>
                <table class="table table-striped border">
                    <tr class=" table-secondary">
                        <th>
                            <label>Question number @(index++):</label>
                        </th>
                        <th>
                            <label> @item.Content</label>
                        </th>
                    </tr>
                    <tr>
                        <th>
                            Choice A:
                        </th>
                        <th>
                            @item.ChoiceA
                        </th>
                    </tr>
                    <tr>
                        <th>
                            Choice B:
                        </th>
                        <th>
                            @item.ChoiceB
                        </th>
                    </tr>
                    <tr>
                        <th>
                            Choice C:
                        </th>
                        <th>
                            @item.ChoiceC
                        </th>
                    </tr>
                    <tr>
                        <th>
                            Choice D:
                        </th>
                        <th>
                            @item.ChoiceD
                        </th>
                    </tr>
                    <tr>
                        <th>
                            Correct:
                        </th>
                        <th>
                            @item.CorrectAnswer
                        </th>
                    </tr>
                </table>
            </form>
        }
    </dl>
</div>
